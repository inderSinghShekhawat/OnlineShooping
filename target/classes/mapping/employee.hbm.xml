<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "model.Employee" table = "employee">
      
      <meta attribute = "class-description">
         This class contains the employee detail. 
      </meta>
      
      <id name = "empid" type = "int" column = "empid">
      </id>
      <property name = "empname" column = "empname" type = "string"/>
      <property name = "empaddress" column = "empaddress" type = "string"/>
      <property name = "salary" column = "salary" type = "long"/>
      <property name = "empAge" column = "empAge" type = "int"/>
   </class>
</hibernate-mapping>